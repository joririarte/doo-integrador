<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.ventas.controller.LoginController"
            prefWidth="400" 
            prefHeight="200">
    <children>
        <Label text="Usuario:" layoutX="50" layoutY="40"/>
        <TextField fx:id="usuarioField" layoutX="130" layoutY="35" />
        <Label text="Contraseña:" layoutX="50" layoutY="80"/>
        <PasswordField fx:id="contraseñaField" layoutX="130" layoutY="75" />
        <Button text="Ingresar" layoutX="130" layoutY="120" onAction="#onLogin" />
        <Label fx:id="mensajeLabel" layoutX="50" layoutY="160" textFill="red"/>
    </children>
</AnchorPane>
