<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ventas.controller.CajeroController" spacing="10">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Registrar Venta" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="codigoBarrasField" promptText="Escanea o escribe el cÃ³digo de barras"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints/>
        </columnConstraints>

        <children>
            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nombreField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Marca:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="marcaField" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Precio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="precioField" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Stock:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="stockField" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Cantidad:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Spinner fx:id="cantidadSpinner" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </children>
    </GridPane>

    <Button text="Agregar a la venta" fx:id="agregarButton"/>

    <TableView fx:id="tablaVenta" prefHeight="200">
        <columns>
            <TableColumn fx:id="productoColumn" text="Producto"/>
            <TableColumn fx:id="marcaColumn" text="Marca"/>
            <TableColumn fx:id="precioColumn" text="Precio"/>
            <TableColumn fx:id="cantidadColumn" text="Cantidad"/>
            <TableColumn fx:id="subtotalColumn" text="Subtotal"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Medio de pago:"/>
        <ComboBox fx:id="medioPagoComboBox"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Confirmar Venta" fx:id="confirmarButton" />
        <Button text="Cancelar" fx:id="cancelarButton" />
    </HBox>

</VBox>
